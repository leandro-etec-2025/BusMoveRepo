<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".FLogicaCidades">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|top"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_rota_1"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="50dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Assis - Tarumã"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_2"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Tarumã - Assis"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_3"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Assis - Maracaí"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_4"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Maracaí - Assis"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_5"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Assis - Cândido Mota"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_6"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Cândido Mota - Assis"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_7"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Maracaí - Padrinhas Pta"
            android:textColor="@color/cor_branca" />

        <Button
            android:id="@+id/btn_rota_8"
            android:layout_width="300dp"
            android:layout_height="52dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/bg_botao_horario"
            android:text="Padrinhas Pta - Maracaí"
            android:textColor="@color/cor_branca" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_inferior"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0A2463"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_mapa"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Mapa"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_mapa_2"/>

        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_perfil"/>

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_home" />

        <ImageButton
            android:id="@+id/btn_menu"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_menu"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
