<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ILogicaInformacoes">

    <LinearLayout
        android:layout_width="409dp"
        android:layout_height="535dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/txv_descricao"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:textSize="25sp"
            android:textColor="@android:color/black"
            android:gravity="start"
            android:lineSpacingExtra="4dp"
            android:justificationMode="inter_word"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="413dp"
        android:layout_height="56dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/menu_inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <Button
            android:id="@+id/btn_voltar"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/forma_botao_estilo"
            android:padding="12dp"
            android:text="HOME"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/menu_inferior"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#0A2463"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/btn_atualizacoes"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Home"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_home"/>

        <ImageButton
            android:id="@+id/btn_horarios"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Mapa"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_mapa_2"/>

        <ImageButton
            android:id="@+id/btn_pontos"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Perfil"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_perfil"/>

        <ImageButton
            android:id="@+id/btn_perfil"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:contentDescription="Menu"
            android:scaleType="fitCenter"
            android:src="@drawable/imagem_menu"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
